<div class="container profile">

    <form  method="post" action="/newclass">
        <label for="crn" class="form-label">CRN:</label>
        <input type="number" id="crn" name="crn" class="short-input" min="0" required><br>

        <label for="name" class="form-label">Course Name:</label>
        <input type="text" id="name" name="course_name" class="short-input" maxlength="20" required><br>

        <label for="numGroups" class="form-label">Number of Groups:</label>
        <input type="number" id="numGroups" name="num_groups" class="short-input" min="1" required><br>

        <label for="groupSize" class="form-label">Group Size:</label>
        <input type="number" id="groupSize" name="groupSize" class="short-input" min="2" required><br>

        <button type="submit" class="login-action-button create-class">create class</button>
    </form>
</div>

